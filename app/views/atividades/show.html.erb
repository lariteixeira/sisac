  <div class="page-header">
  <h1>Atividade Complementar - <%= @atividade.nome %></h1>
  </div>
  <p>
    <strong>Nome:</strong>
    <%= @atividade.nome %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= @atividade.status %>
  </p>

  <p>
    <strong>Professor:</strong>
    <%= nome_professor(@atividade.professor) %>
  </p>

  <p>
    <strong>Documento:</strong>
    <% @atividade.comprovantes.each do |comprovante|%>
      <a href="<%= comprovante.arquivo.url %>"><%= comprovante.arquivo_file_name %></a> | 
    <% end %>
  </p>

  <p>
    <strong>Aluno:</strong>
    <%= @atividade.usuario.nome %>
  </p>

<%if @atividade.status == "Rejeitada"%>
  <p>
    <strong>Motivo de Rejeicao:</strong>
    <%= @atividade.motivo %>
  </p>
  <%end%>


  <%= link_to 'Editar', edit_atividade_path(@atividade), class: 'btn btn-default' %>
  <%= link_to 'Voltar', atividades_path, class:"btn btn-default" %>

  <% if @atividade.professor == nil && usuario_atual.avaliador %>

    <%= link_to 'Avaliar', class:'btn btn-default' %>

  <%elsif @atividade.status == "Aceita"%>

    <%= link_to 'Rejeitar', edit_rejeitar_path, class:'btn btn-default' %>
    <%= link_to 'Confirmar', confirma_atividade_path(@atividade.id), method: :put, class:'btn btn-default' %>

  <%end%>



